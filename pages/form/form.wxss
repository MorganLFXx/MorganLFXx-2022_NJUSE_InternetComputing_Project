.power_blank {
  width: 90%;
  margin-left: 5%;
}

.power_errorMsg {
  color: red;
  width: 90%;
  margin-left: 5%;
  font-size: 28rpx;
}

.pick_area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  margin-right: 10%;
}

.pick_area_label{
  color: darkgray;
  margin-left: 30rpx;
}

.pick_area_picker{
  font-size: 40rpx; 
  margin-left: 40rpx;
  /* font-weight: 400;  */
} 

.horizontal_line {
  width: 90%;
  border-bottom: 1px solid #ccc;
  margin-top: 10px; 
  margin-bottom: 10px;
  margin-left: 5%;
}

.preview_area {
  width:95%;
  padding: 10rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 200rpx;
  box-sizing: border-box;
  margin: 2.5%;
  border: 1rpx solid darkgray;
}

.preview_area_left {
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.preview_area_left_img {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}

.preview_area_rightLR {
  width:75%;
  padding: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.preview_area_rightLR_text {
  font-size: 36rpx;
  font-weight: 600;
}

.preview_area_rightLMR {
  width:75%;
  padding: 5rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.preview_area_rightLMR_left {
  width: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.preview_area_rightLMR_left_text {
  font-size: 24rpx;
  font-weight: 500;
}

.preview_area_rightLMR_right {
  width: 40%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.preview_area_rightLMR_right_text {
  width: 15%;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 500;
}

.preview_area_rightLMR_right_btns {
  width: 85%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.my_btn {
  height: 100rpx;
  width: 100rpx;
}

.power_info_less {
  margin-left: 90rpx;
  width: 50rpx;
  height: 50rpx;
}