.top_screen{
  position: sticky;
  top: 0;
  left: 0;
  width: 100vw;
  height: 20vw;
  background-color: rgb(147,90,246);
  font-size: 10vw;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: auto;
  z-index: 100;
}
.quit_button{
  position: fixed;
  top: 3vw;
  left: 3vw;
  width: 14vw;
  height: 14vw;
  z-index: 101;
}
.meal_info{
  width: 100vw;
  height: 20vw ;
  border:2px solid black;
  display: flex;
  margin: -2px 0 0 -2px;
  max-height: 150px;
  position: relative;
}
.meal_info_img{
  width: 20vw;
  height: 20vw ;
}
.meal_info_name{
  position: absolute;
  left: 23vw;
  font-size: 6vw;
  font-weight: bold;
  top:1vw;
}
.meal_info_price{
  position: absolute;
  top: 12vw;
  left: 23vw;
  font-size: 5vw;
  font-weight: bold
}
.meal_info_num{
  position: absolute;
  top: 3vw;
  left: 65vw;
  font-size: 10vw;
  font-weight: bold
}
.meal_info_add{
  position: absolute;
  width: 10vw;
  height: 10vw;
  top: 5vw;
  left: 54vw;
}
.meal_info_sub{
  position: absolute;
  width: 10vw;
  height: 10vw;
  top: 5vw;
  left: 86vw;
}
.settle_accounts_area{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 20vw;
  z-index: 100;
  border:2px solid black;
  display: flex;
  background-color: white;
}
.settle_accounts_area_left{
  width: 70vw;
  height: 20vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 6vw;
  margin: 0;
}
.settle_accounts_area_right_btn{
  background-color: rgb(255,188,13);
