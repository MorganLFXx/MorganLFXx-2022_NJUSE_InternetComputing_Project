.picture_preview_img{
  position: sticky;
  width: 100vw;
  top: 0;
  left: 0;
}
.text_preview_name{
  font-size: 7vw;
  font-weight: bold;
  padding-left: 5vw;
}
.text_preview_score{
  font-weight: bold;
  font-size: 5vw;
  padding-left: 5vw;
}
.text_preview_text{
  font-size: 5vw;
  padding-left: 5vw;
}

.comment {
  width: 100%;
  height: 150rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  box-sizing: border-box;
  margin-top: 2.5%;
}

.comment_time {
  border-bottom: 1rpx solid #ccc;
  background-color: rgb(248, 237, 218);
}
.comment_connent{
  background-color: white;
}



